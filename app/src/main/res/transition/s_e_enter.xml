<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="250">

    <!-- Change bounds of all shared elements -->
    <transitionSet>
        <targets>
            <target android:excludeId="@+id/action_bar_container" />
            <target android:targetId="@+id/detail_background" />
            <target android:targetId="@+id/detail_imageview" />
            <target android:targetId="@+id/detail_textView1" />
            <target android:targetId="@+id/detail_textView2" />
        </targets>
        <changeBounds/>
    </transitionSet>

</transitionSet>