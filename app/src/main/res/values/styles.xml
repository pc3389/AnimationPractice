    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/enter</item>
        <item name="android:windowReturnTransition">@transition/exit</item>
        <item name="android:windowSharedElementEnterTransition">@transition/s_e_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/s_e_return</item>
    </style>

</resources>